<style>

  @media only screen and (max-width: 600px) {
  .header-lp{
    font-size: 16px;
    padding: 0px;
  }
     .l-c-h2{
     font-size: 2em !important;
       padding-top: 25px !important;
    padding-bottom: 20px !important;
  }
    .grid__item.product__media-wrapper.slider_custom {
    width: auto !important;
}
}



 
 .product-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    list-style: none;
    margin: 0;
    padding: 0;
}
  
  .product-item {
    box-sizing: border-box;
    margin: 0 10px 20px;
    padding: 3px;
    text-align: center;
    border: 1px solid #d75555;
    border-radius: 10px;
    height: 80px !important;
    width: 80px;
}
  .product-image {
    display: block;
    margin: 0 auto 10px;
    max-width: 100%;
    height: 100%;
}

  .white-product {
    display: none;
}

  .navy-product {
    display: none;
}

  .black-product {
    display: block;
}

   .red-product {
    display: none;
}

  .owl-dots {
    DISPLAY: NONE;
}
</style>



<h4>SELECT COLOUR</h4>
{% comment %}
<ul class="product-list">

  
  {% assign product_limit = 4
%}
  {% for product in collections.all.products limit:product_limit %}
    <li class="product-item">
      <a href="#" class="hide-show">
        <img src="{{ product.featured_image.src | img_url: 'medium' }}" class="product-image" alt="{{ product.featured_image.alt }}">
      </a>
    </li>
  {% endfor %}
</ul>
{% endcomment %}
<ul class="product-list">
  
  
    <li class="product-item">
      <a href="" class="pro-black">
