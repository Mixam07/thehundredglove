        const cartResponse = await fetch("/cart.js");
        const cart = await cartResponse.json();
        render(cart, true);
      } else {
        const errorData = await response.json();
        console.error("Add to cart failed:", errorData);
      }
    } else if(!hasThreeOfSameProduct && hasGiftItemSecond){
