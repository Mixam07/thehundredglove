{{ 'nw-default-example.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}{
    {% if section.settings.bgColor != blank %}
      background-color: {{section.settings.bgColor}};
    {% endif %}
    padding-top: {{section.settings.pdTop}}px;
    padding-bottom: {{section.settings.pdBottom}}px;
  }

  @media(max-width: 999px){
    .section-{{ section.id }}{
      padding-top: {{section.settings.pdTopMob}}px;
      padding-bottom: {{section.settings.pdBottomMob}}px;
    }
  }
  .nwTextImageWrap{
    display:flex;
    align-items:center;
  }
  .nwTextImageWrapLeft{
    width: 40%;
  }
  .nwTextImageWrapRight{
    width: 60%;
    margin-left: 30px;
  }
  .nwTextImageWrapLeftTitle p{
    margin: 0;
  }
  .nwTextImageWrapLeftTitle{
    color: #000;
    font-family: Chakra Petch;
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.5; /* 152.632% */
    letter-spacing: -0.76px;
  }
  .nwTextImageWrapLeftTitle em{
    color: #D75454;
    font-style: normal;
  }
  .nwTextImageWrapLeftText{
    color: #151515;
    font-family: Chakra Petch;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 1.4; /* 144.444% */
    margin-top: 8px;
    max-width: 424px;
  }
  .nwTextImageWrapLeftBtn{
    width: 100%;
    max-width: 424px;
    display:inline-flex;
    justify-content:center;
    padding: 13px 30px;
    background: #D75454;
    color: #fff;
    font-family: Chakra Petch;
    font-size: 14px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    text-transform: capitalize;
    text-decoration:none;
  }
  .nwTextImageWrapLeftTextBottom{
    max-width: 424px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 6px;
    color: #000;
    font-family: Chakra Petch;
    font-size: 12px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    margin-top: 12px;
    text-transform: capitalize;
  }
  .nwTextImageWrapRightTop{
    height: 200px;
    position:relative;
    
  }
  .nwTextImageWrapRightTop:before{
    position: absolute;
    content: '';
    width: 328px;
    background: transparent linear-gradient(-90deg, #F1F9FC00 0%, #e7e7e7 100%) 0% 0% no-repeat padding-box;
    height: calc(200% + 20px);
    z-index: 2;
    pointer-events: none;
  }

  .nwTextImageWrapRightBottom{
    height: 200px;
    margin-top: 20px;
  }
  @media(max-width: 999px){
    .nwTextImageWrap{
      flex-wrap:wrap;
      flex-direction: column-reverse;
    }
    .nwTextImageWrapRightBottom,
    .nwTextImageWrapRightTop{
      width: calc(100% + 30px);
      margin-left: -15px;
    }
    
    .nwTextImageWrapLeft,
    .nwTextImageWrapRight{
      width: 100%;
    }
    .nwTextImageWrapRight{
      margin-left: 0;
    }
    .nwTextImageWrapRightTop:before{
      display:none;
    }
    .nwTextImageWrapLeftTitle{
      font-size: 24px;
      margin-top: 30px;
    }
    .nwTextImageWrapLeftText p{
      margin: 0;
      margin-bottom: 20px;
    }
    .nwTextImage .swiper-slide img{
      height: 139px!important;
    }
    .nwTextImageWrapRightBottom{
      margin-top: 12px;
    }
  }
</style>
<!-- Link Swiper's CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

  <style>
    .swiper {
      width: 100%;
      height: 100%;
    }

    .nwTextImage .swiper-slide {
      text-align: center;
      font-size: 18px;
      display: flex;
      justify-content: center;
      align-items: center;
      width: auto;
      border-radius: 8px;
    }

    .nwTextImage .swiper-slide img {
      width: 100%;
      object-fit: cover;
      object-position: center;
      border-radius: 8px;
      height: min(200px, 16vw);
    }

    @media(max-width: 999px){
      .nwTextImageWrapRightTop,
      .nwTextImageWrapRightBottom{
        height: 139px;
      }
      .nwTextImage .swiper-slide img{
        height: 139px!important;
      }
    }

  </style>

  
<section class="nwTextImage section-{{ section.id }}">
  <div class="page-width">
    

    <div class="nwTextImageWrap">
      <div class="nwTextImageWrapLeft">
        <div class="nwTextImageWrapLeftTitle">
          {% if request.locale.iso_code == 'sv' %}{{ section.settings.title-sv }}{% else %}{{ section.settings.title }}{% endif %}
        </div>
        <div class="nwTextImageWrapLeftText">
          {% if request.locale.iso_code == 'sv' %}{{ section.settings.text-sv }}{% else %}{{ section.settings.text }}{% endif %}
        </div>
        <a class="nwTextImageWrapLeftBtn" href="{{ section.settings.button_link }}">
          {% if request.locale.iso_code == 'sv' %}HANDLA HANDSKAR{% else %}SHOP GLOVES{% endif %}
        </a>
        <div class="nwTextImageWrapLeftTextBottom">
          <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="m6.343 17.22-1.487-2.505-2.824-.62.276-2.906-1.914-2.19 1.914-2.188-.276-2.907 2.824-.619L6.343.78 9 1.907 11.657.779l1.487 2.506 2.824.619-.276 2.907L17.606 9l-1.914 2.189.276 2.907-2.824.619-1.487 2.506L9 16.093zm1.782-5.55 4.42-4.42-.878-.904-3.542 3.542-1.792-1.766L5.455 9z" fill="#121212"/></svg>
          {% if request.locale.iso_code == 'sv' %}Prova helt utan risk med v√•r 10-matchers garanti{% else %}Try 100% Risk Free With Our 10 Game Guarantee{% endif %}
        </div>
      </div>
      <div class="nwTextImageWrapRight">
        <div class="nwTextImageWrapRightTop">
          <div class="swiper mySwiper mySwiperTop">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
              <div class="swiper-slide">
                <img data-src="{{ block.settings.image | img_url:'x200' }}" alt="img" class="lazy2 lazy3">  
              </div>
              {% endfor %}
            </div>
          </div>
        </div>

        
        <div class="nwTextImageWrapRightBottom">
          <div class="swiper mySwiper mySwiperBottom">
            <div class="swiper-wrapper">
              {% assign newBlocks = section.blocks | reverse %}
              {% for block in newBlocks %}
              <div class="swiper-slide">
                <img data-src="{{ block.settings.image | img_url:'x200' }}" alt="img" class="lazy2 lazy3" loading="lazy">  
              </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
    
  </div>
</section>

  <!-- Swiper JS -->
  <!-- Initialize Swiper -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      var swiperTop = new Swiper(".mySwiperTop", {
        slidesPerView: "auto",
        spaceBetween: 20,
        loop: true,
      });
      
      var swiperTop = new Swiper(".mySwiperBottom", {
        slidesPerView: "auto",
        spaceBetween: 20,
        loop: true,
      });
    });
  </script>

