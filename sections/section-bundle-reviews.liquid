{{ 'section-bundle-reviews.css' | asset_url | stylesheet_tag }}

<div class="page-width">
    <h1 class="section-bundle-reviews__title">Why Hundreds Of YOUNG Keepers Love Our Gloves</h1>
    <div class="section-bundle-reviews__wrapper">
        {% for block in section.blocks %}
            {% if block.type == 'row' %}
                <div class="section-bundle-reviews__item">
                    <div class="section-bundle-reviews__image">
                        <img src="{{ block.settings['content-image'] | img_url: 'original' }}" alt="photo">
                    </div>
                    <div class="section-bundle-reviews__information">
                        <div class="section-bundle-stars">
                            <img src="{{ 'star-orange.svg' | asset_url }}" alt="star">
                            <img src="{{ 'star-orange.svg' | asset_url }}" alt="star">
                            <img src="{{ 'star-orange.svg' | asset_url }}" alt="star">
                            <img src="{{ 'star-orange.svg' | asset_url }}" alt="star">
                            <img src="{{ 'star-orange.svg' | asset_url }}" alt="star">
                        </div>
                        <h3 class="section-bundle-reviews__caption">
                            {{ block.settings['content-title'] }}
                        </h3>
                        <p class="section-bundle-reviews__description">
                            {{ block.settings['content-description'] }}
                        </p>
                        <p class="section-bundle-reviews__name">
                            {{ block.settings['content-name'] }}
                        </p>
                        <div class="section-bundle-reviews__info">
                            <img width="15px" src="{{ 'verified.svg' | asset_url }}" alt="star">
                            Verified Reviewer
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <div class="section-bundle-reviews__wrap">
        <a href="#build-bundle-product" class="section-bundle-reviews__button">BUILD THEIR BUNDLE â†’</a>
        <p class="section-bundle-reviews__text">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
