{{ 'nw-default-example.css' | asset_url | stylesheet_tag }}

<style>
    .section-{{ section.id }}{
      {% if section.settings.bgColor != blank %}
        background-color: {{section.settings.bgColor}};
      {% endif %}
      padding-top: {{section.settings.pdTop}}px;
      padding-bottom: {{section.settings.pdBottom}}px;
    }

    @media(max-width: 999px){
      .section-{{ section.id }}{
        padding-top: {{section.settings.pdTopMob}}px;
        padding-bottom: {{section.settings.pdBottomMob}}px;
      }
    }
    .nwTextImageWrap{
      display:flex;
      align-items:center;
    }
    .nwTextImageWrapLeft{
      width: 40%;
    }
    .nwTextImageWrapRight{
      width: 60%;
      margin-left: 30px;
    }
    .nwTextImageWrapLeftTitle h3{
      margin: 0;
      color: {{ section.settings.color_title }};    max-width: 400px;
    }
    .nwTextImageWrapLeftTitle em{
      color: #D75454;
      font-style: normal;
    }
    .nwTextImageWrapLeftText{
      color: {{ section.settings.color_text }};
      font-family: Chakra Petch;
      font-size: 14px;
      font-style: normal;
      font-weight: 500;
      line-height: 1.4; /* 144.444% */
      margin-top: 8px;
      max-width: 424px;
    }
    .nwTextImageWrapLeft .button {
      width: 80%;
      text-transform: uppercase;

          max-width: 400px!important;
  }
    .nwTextImageWrapLeftTextBottom{
      max-width: 424px;
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 6px;
      color: #fff;
      font-size: 12px;
      font-style: normal;
      font-weight: 100;
      line-height: normal;
      margin-top: 12px;
      text-transform: capitalize;
    }
    .nwTextImageWrapRightTop{
      height: 200px;
      position:relative;

    }

    .nwTextImageWrapRightBottom{
      height: 200px;
      margin-top: 20px;
    }
    @media(max-width: 999px){
      .nwTextImageWrap{
        flex-wrap:wrap;
        flex-direction: column-reverse;
      }
      .nwTextImageWrapRightBottom,
      .nwTextImageWrapRightTop{
        width: calc(100% + 30px);
        margin-left: -15px;
      }

      .nwTextImageWrapLeft,
      .nwTextImageWrapRight{
        width: 100%;
      }
      .nwTextImageWrapRight{
        margin-left: 0;
      }
      .nwTextImageWrapRightTop:before{
        display:none;
      }
      .nwTextImageWrapLeftTitle{
        font-size: 24px;
        margin-top: 30px;
      }
      .nwTextImageWrapLeftText p{
        margin: 0;
        margin-bottom: 20px;
      }
      .nwTextImage .swiper-slide img{
        height: 139px!important;
      }
      .nwTextImageWrapRightBottom{
        margin-top: 12px;
      }
    }
</style>
<!-- Link Swiper's CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<style>
      .swiper {
        width: 100%;
        height: 100%;
      }

      .nwTextImage .swiper-slide {
        text-align: center;
        font-size: 18px;
        display: flex;
        justify-content: center;
        align-items: center;
        width: auto;
        border-radius: 8px;
      }

     .nwTextImage .swiper-slide img {
      width: 100%;
      object-fit: cover;
      object-position: center;
      border-radius: 8px;
      height: 186px;
      /* border-radius: 10px; */
      border: 2px solid white;
      /* margin: 5px; */
      /* padding: 5px; */
  }

      @media(max-width: 999px){
        .nwTextImageWrapRightTop,
        .nwTextImageWrapRightBottom{
          height: 139px;
        }
        .nwTextImage .swiper-slide img{
          height: 139px!important;
        }
      }
</style>

