        </div>
      </div>
      <div class="nwTextImageWrapRight">
        <div class="nwTextImageWrapRightTop">
          <div class="swiper mySwiper mySwiperTop">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide">
                  <img data-src="{{ block.settings.image | img_url:'x200' }}" alt="img" class="lazy2 lazy3">
                </div>
              {% endfor %}
            </div>
          </div>
        </div>

        <div class="nwTextImageWrapRightBottom">
          <div class="swiper mySwiper mySwiperBottom">
            <div class="swiper-wrapper">
              {% assign newBlocks = section.blocks | reverse %}
              {% for block in newBlocks %}
                <div class="swiper-slide">
                  <img
                    data-src="{{ block.settings.image | img_url:'x200' }}"
                    alt="img"
                    class="lazy2 lazy3"
                    loading="lazy"
                  >
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>
  var swiperTop = new Swiper(".mySwiperTop", {
    slidesPerView: "auto",
    spaceBetween: 20,
    loop: true,
  });
</script>

<script>
  var swiperTop = new Swiper(".mySwiperBottom", {
    slidesPerView: "auto",
    spaceBetween: 20,
    loop: true,
  });
</script>

{% schema %}
{
  "name": "NW text image",
  "settings": [
    {
      "type": "header",
      "content": "Section main settings"
    },
    {
      "type": "color_background",
      "id": "bgColor",
      "label": "Section background"
    },
    {
      "type": "range",
      "id": "pdTop",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section padding-top",
      "default": 35
    },
    {
      "type": "range",
      "id": "pdBottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section padding-bottom",
      "default": 35
    },
    {
      "type": "range",
      "id": "pdTopMob",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section padding-top (mobile)",
      "default": 15
    },
    {
      "type": "range",
      "id": "pdBottomMob",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Section padding-bottom (mobile)",
      "default": 15
    },
    {
      "type": "header",
      "content": "Section content settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "color",
      "id": "color_title",
      "label": "Color Title",
      "default": "#fff"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "color",
      "id": "color_text",
      "label": "Color text",
      "default": "#fff"
    },
  ],
  "blocks": [
     {
       "name": "Item",
       "type": "item",
       "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
       ]
     }
  ],
  "presets": [
    {
      "name": "NW text image"
    }
  ]
}
{% endschema %}
