{{ 'section-help-images.css' | asset_url | stylesheet_tag }}

<div class="page-width">
    <div class="section-help-images__wrapper">
        <h1 class="section-help-images__title">How to extend glove life (without killing grip)</h1>
        <div class="section-help-images__list">
            {% for block in section.blocks %}
                {% if block.type == 'row' %}
                    <div class="section-help-images__item">
                        <img src="{{ block.settings['content-image'] | img_url: 'original' }}" alt="">
                        <span class="section-help-images__text">{{ block.settings['content-title'] }}</span>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <p class="section-help-images__information">
            Want a deeper dive? Read our full guide on
            <a href="{{ section.settings.main_title_link }}">how to make your gloves last longer â†’</a>
        </p>
    </div>
</div>

{% schema %}
{
    "name": "section-help-images",
    "tag": "section",
    "class": "section-help-images",
    "settings": [
        {
            "type": "url",
            "id": "main_title_link",
            "label": "Main Title Link"
        }
    ],
    "blocks": [
    {
        "type": "row",
        "name": "Content",
        "settings": 
            [
                {
                    "id": "content-title",
                    "type": "text",
                    "label": "Title",
                    "default": "Title"
                },
                {
                    "id": "content-image",
                    "type": "image_picker",
                    "label": "Image"
                }
            ]
        }
    ],
    "presets" : [
        {
            "name" : "section-help-images",
            "category" : "Custom"
        }
    ]
}
{% endschema %}