<style>
  .section-{{ section.id }}{
    {% if section.settings.bgColor != blank %}
      background-color: {{section.settings.bgColor}};
    {% endif %}
    padding-top: {{section.settings.pdTop}}px;
    padding-bottom: {{section.settings.pdBottom}}px;
  }

  @media(max-width: 999px){
    .section-{{ section.id }}{
      padding-top: {{section.settings.pdTopMob}}px;
      padding-bottom: {{section.settings.pdBottomMob}}px;
    }
  }

  .nwReviewsWrapSwiperSlider{
    width: 350px !important;
    margin-right: 30px !important;
  }
  .nwReviewsWrapTitle p{
    margin: 0;
  }
 .nwReviewsWrapTitle p {
    color: #000;
    text-align: center;
    font-size: 40px;
    font-style: normal;
       font-weight: 200;
    line-height: normal;
    text-transform: uppercase;
    font-family: 'Anton' !important;
  
}
  .nwReviewsWrapSwiperSliderTopWrapTop {
    text-align: center;
    align-items: center;
    display: flex
;
    flex-direction: column;
}
  .nwReviewsWrap{
  }
  .nwReviewsWrapSwiper{
    padding: 60px 0!important;
  }
  .nwReviewsWrapSwiper .swiper-slide{
    width: 323px;
    box-sizing:border-box;
    border-radius: 8px;
    background: #FFF;
    box-shadow: 0px 4px 48px 0px rgba(0, 0, 0, 0.10);
    height: auto;
  }
  .nwReviewsWrapSwiperSliderTop{
    padding: 15px 25px 35px 25px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: calc(100% - 90px);
    text-align:center;
  }
  .nwReviewsWrapSwiperSliderBottom{
    padding: 20px;
    background: rgba(58, 58, 58, 1);
    border-radius:0 0 8px 8px;
    
  }
  .nwReviewsWrapSwiperSliderBottomMiddle{
    color: #151515;
    text-align: center;
    max-width: 115px;
    font-size: 14px;
    font-style: normal;
    font-weight: 700;
    color: #fff;
    line-height: 1.7; /* 171.429% */
  }
  .nwReviewsWrapSwiperSliderTopTitle{
  margin-top: 10px;
    color: #000;
    text-align: center;
    font-size: 21px;
    font-weight: bold;
    line-height: 26px;
    text-transform: uppercase;
}
  }
  .nwReviewsWrapSwiperSliderTopWrapTop>svg{
    display:block;
    margin: auto;
  }
  .nwReviewsWrapSwiperSliderTopText{
    margin-top: 12px;
    color: #151515;
    text-align: center;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 1.5; /* 150% */
  }
  .nwReviewsWrapSwiperSliderTopName{
    color: #000;
    text-align: center;
    text-transform:uppercase;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.87; /* 187.5% */
    margin-top: 10px;
    letter-spacing: -0.32px;
  }
  .nwReviewsWrapSwiperSliderTopVerif{
    color: #151515;
    text-align: center;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 1.7; /* 171.429% */
    display:flex;
    align-items:center;
    gap: 4px;
    justify-content:center;
  }
  .nwReviewsWrapSwiperSliderBottomRightBtn{
    display:block;
    width: 50px;
    height: 50px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
  }
  .nwReviewsWrapSwiperSliderBottom{
    display: flex;
    justify-content: space-between;
    align-items:center;
  }
  .nwReviewsWrapSwiperSliderBottomLeft{
    display:block;
    margin-top: -50px;
    width: 105px;
    height: 105px;
  }
  .nwReviewsWrapSwiperSliderBottomLeft img{
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .nwReviewsWrapSwiperSliderOne{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  @media(max-width: 999px){
    div.nwReviewsWrapSwiperSlider{
      width: 275px !important;
      margin-right: 20px;
    }

    .nwReviewsWrapSwiperSliderTopText{
      font-size: 14px !important;
      margin-bottom: 15px;
    }

    .nwReviewsWrapSwiperSliderBottom{
      padding: 15px;
    }

    .nwReviewsWrapTitle{
      color: #000;
      text-align: center;
    
      font-size: 24px;
      font-style: normal;
      font-weight: 700;
      line-height: 1.16; /* 116.667% */
      letter-spacing: -0.48px;
    }
    .nwReviewsWrapSwiperSliderTop{
      padding: 10px 20px 20px 20px;
      height: calc(100% - 58px);
    }
    .nwReviewsWrapSwiperSliderTopTitle {
      color: #000;
      text-align: center;
      font-size: 18.555px;
      font-style: normal;
      font-weight: 700;
      line-height: 23.193px; /* 125% */
      
    }
    .nwReviewsWrapSwiperSliderTopText{
      color: #151515;
      text-align: center;
    
      font-size: 12.37px;
      font-style: normal;
      font-weight: 500;
      line-height: 18.555px; /* 150% */
    }
    .nwReviewsWrapSwiper .swiper-slide{
      width: 250px;
      border-radius: 6.185px;
      background: #FFF;
      box-shadow: 0px 3.09244px 37.10925px 0px rgba(0, 0, 0, 0.10);
    }
    .nwReviewsWrapSwiperSliderBottom{
      border-radius: 0 0 6.185px 6.185px;
    }
    .nwReviewsWrapSwiperSliderBottomLeft{
      height: 100px;
      width: 100px;
      margin-bottom: -15px;
      margin-right: -50px;
    }
    .nwReviewsWrapSwiperSliderBottomLeft img{
      height: 100%;
      width: auto;
    }
    .nwReviewsWrapSwiperSliderBottomRightBtn{
      width: 41.748px;
      height: 41.748px;
    }
    .nwReviewsWrapSwiperSliderTopName{
      font-size: 12px;
      margin-top: 6px;
    }
    .nwReviewsWrapSwiperSliderTopVerif{
      font-size: 10px;
    }
    .nwReviewsWrapSwiperSliderTopVerif svg{
      width: 15px;
      height: 15px;
    }
    .nwReviewsWrapSwiperSliderTopWrapTop svg{
      height: 18px;
    }
    .nwReviewsWrapSwiperSliderBottomMiddle{
      font-size: 11px;
      max-width: 75px;
    }
    .nwReviewsWrapSwiper{
      padding: 40px 0!important;
    }
  }

  /** reviews css **/
  .section-{{ section.id }} .page-width {
      max-width: 1920px;
      padding-right: 0;
      padding-left: 16px;
  }

  @media (min-width: 641px) {
    .section-{{ section.id }} .page-width {
      padding-left: 63px;
    }
  }
  
  .section-{{ section.id }} .page-width .nwReviewsWrap .nwReviewsWrapSwiperSliderTopWrapTop svg path,
  .section-{{ section.id }} .page-width .nwReviewsWrap .nwReviewsWrapSwiperSliderTopVerif svg path {
      fill: #D75555;
  }
  
  .section-{{ section.id }} .page-width .nwReviewsWrap .nwReviewsQuote {
      display: flex;
      justify-content: center;
      align-items: center;
  }
  
  .section-{{ section.id }} .page-width .nwReviewsWrap .nwReviewsQuote svg {
      width: 60px;
      height: 60px;
      margin-top: -30px;
  }
  
  .section-{{ section.id }} .page-width .nwReviewsWrapSwiperSlider {
      border-radius: 16px;
  }
  @media (min-width: 641px) {
    .section-{{ section.id }} .page-width .nwReviewsWrapSwiperSlider {
        border-radius: 23px;
    }
  }

  .section-{{ section.id }} .page-width .swiper-wrapper {
    padding-left: 15px;
  }

  .section-{{ section.id }} .page-width .nwReviewsWrapSwiperSliderOne {
    background-color: #F0F0F0;
    border-radius: 16px;
  }
  @media (min-width: 641px) {
    .section-{{ section.id }} .page-width .nwReviewsWrapSwiperSliderOne {
      background-color: #F0F0F0;
      border-radius: 23px;
    }
  }

  .section-{{ section.id }} .page-width .nwReviewsWrapSwiperSliderBottomRightBtn img {
    width: 100%;
    height: auto;
  }

  .section-{{ section.id }} .page-width .nwReviewsWrapSwiper .swiper-slide {
    box-shadow: 0px 0px 5px 0px #514D4D;
  }
  @media (max-width: 640px) {
    .section-{{ section.id }} .page-width .nwReviewsWrapSwiperSliderTopText {
      font-size: 16px;
      line-height: 20px;
    }
    .section-{{ section.id }} .page-width .nwReviewsWrapSwiperSliderTopName {
      font-size: 14px;
    }
    .section-{{ section.id }} .page-width .nwReviewsWrapSwiperSliderTopVerif {
      font-size: 14px;
    }
    .section-{{ section.id }} .page-width .swiper-wrapper {
      justify-content: flex-start;
      padding-left: 0;
    }
    .section-{{ section.id }} .page-width .nwReviewsWrapSwiper {
      padding-left: 15px !important;
    }
  }
</style>
