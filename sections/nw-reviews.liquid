      spaceBetween: 40,
      // creando breakpoints
      breakpoints: {
        0: {
          slidesPerView: 1.5,
          spaceBetween: 24
        },
        640: {
          slidesPerView: 2.5,
          spaceBetween: 24
        },
        992: {
          slidesPerView: 3.5,
          spaceBetween: 40
        }
      }
    });
