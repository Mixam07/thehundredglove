        },
        {
            "type": "collection",
            "id": "collection_2",
            "label": "Collection 2"
        },
        {
            "type": "collection",
            "id": "collection_3",
            "label": "Collection 3"
        },
        {
            "id": "page_1",
            "type": "page",
            "label": "Page 1"
        },
        {
            "id": "page_2",
            "type": "page",
            "label": "Page 2"
        },
        {
            "id": "page_3",
            "type": "page",
            "label": "Page 3"
        },
        {
            "id": "page_4",
            "type": "page",
            "label": "Page 4"
        },
        {
            "id": "link",
            "type": "url",
