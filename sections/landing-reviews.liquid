  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/6.8.4/swiper-bundle.min.js"></script>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      console.log('here!!!!');
      var landingReviewsWrapSwiper = new Swiper(".landingReviewsWrapSwiper", {
        slidesPerView: "auto",
        centeredSlides: true,
        calculateHeight:true,
        loop: true,
        spaceBetween: 25,
        navigation: {
          nextEl: '.nav_wrap ,player-prev',
          nextEl: '.nav_wrap ,player-next'
        }
      });
    });
  </script>

