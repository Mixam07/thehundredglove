<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/6.8.4/swiper-bundle.min.css">

<style>
  .section-{{ section.id }}{
    {% if section.settings.bgColor != blank %}
      background-color: {{section.settings.bgColor}};
    {% endif %}
    padding-top: {{section.settings.pdTop}}px;
    padding-bottom: {{section.settings.pdBottom}}px;
  }

  @media(max-width: 999px){
    .section-{{ section.id }}{
      padding-top: {{section.settings.pdTopMob}}px;
      padding-bottom: {{section.settings.pdBottomMob}}px;
    }
  }
  .nwReviewsWrapTitle p{
    margin: 0;
  }
  .nwReviewsWrapTitle{
    color: #000;
    text-align: center;
    font-family: Chakra Petch;
    font-size: 38px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.25; /* 126.316% */
    letter-spacing: -0.76px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav_wrap {
      display: flex;
      align-items: center;
      gap: 30px;  
  }
  
  .nwReviewsWrap{
  }
  .landingReviewsWrapSwiper{
    padding: 60px 0!important;
  }
  .landingReviewsWrapSwiper .swiper-slide{
    width: 100%;
    max-width: 413px;
    box-sizing:border-box;
    border-radius: 8px;
    background: #F0F0F0;
    /* box-shadow: 0px 4px 48px 0px rgba(0, 0, 0, 0.10); */
    height: auto;
  }
  .landingReviewsWrapSwiperSliderTop{
    padding: 35px 25px 15px 25px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    /* height: calc(100% - 70px); */
    height: 100%;
  }
  .landingReviewsWrapSwiperSliderBottom{
    padding: 8px;
    background: rgba(0,0,0,0.1);
    border-radius:0 0 8px 8px;
    
  }
  .landingReviewsWrapSwiperSliderBottomMiddle{
    color: #151515;
    text-align: center;
    font-family: Chakra Petch;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 1.7; /* 171.429% */
  }
  .landingReviewsWrapSwiperSliderTopTitle{
    margin-top: 15px;
    color: #000;
    text-align: center;
    font-family: Chakra Petch;
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: 30px; /* 125% */
    letter-spacing: -0.48px;
  }
  .landingReviewsWrapSwiperSliderTopWrapTop>svg{
    display:block;
    margin: auto;
  }
  .landingReviewsWrapSwiperSliderTopText{
    margin-top: 12px;
    color: #151515;
    text-align: center;
    font-family: Chakra Petch;
    font-size: 16px;
    font-style: normal;
    font-weight: 500;
    line-height: 1.5; /* 150% */
  }
  .landingReviewsWrapSwiperSliderTopName{
    color: #000;
    text-align: center;
    leading-trim: both;
    text-edge: cap;
    font-family: Chakra Petch;
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: 1.87; /* 187.5% */
    margin-top: 10px;
    letter-spacing: -0.32px;
  }
  .landingReviewsWrapSwiperSliderTopVerif{
    color: #151515;
    text-align: center;
    font-family: Chakra Petch;
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 1.7; /* 171.429% */
    display:flex;
    align-items:center;
    gap: 4px;
    justify-content:center;
  }
  .landingReviewsWrapSwiperSliderBottomRightBtn{
    display:block;
    width: 54px;
    height: 54px;
    background: #000;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
  }
  .landingReviewsWrapSwiperSliderBottom{
    display: flex;
    justify-content: space-between;
    align-items:center;
  }
  .landingReviewsWrapSwiperSliderBottomLeft{
    display:block;
    width: 54px;
    height: 54px;
  }
  .landingReviewsWrapSwiperSliderBottomLeft{
    display:block;
    height: 54px;
    width: auto;
  }
  .landingReviewsWrapSwiperSliderOne{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  @media(max-width: 999px){
    .nwReviewsWrapTitle{
      color: #000;
      text-align: center;
      font-family: Chakra Petch;
      font-size: 24px;
      font-style: normal;
      font-weight: 700;
      line-height: 1.16; /* 116.667% */
      letter-spacing: -0.48px;
    }
    .landingReviewsWrapSwiperSliderTop{
      padding: 23px 20px 10px 20px;
      height: calc(100% - 58px);
    }
    .landingReviewsWrapSwiperSliderTopTitle {
      color: #000;
      text-align: center;
      font-family: Chakra Petch;
      font-size: 18.555px;
      font-style: normal;
      font-weight: 700;
      line-height: 23.193px; /* 125% */
      letter-spacing: -0.371px;
    }
    .landingReviewsWrapSwiperSliderTopText{
      color: #151515;
      text-align: center;
      font-family: Chakra Petch;
      font-size: 12.37px;
      font-style: normal;
      font-weight: 500;
      line-height: 18.555px; /* 150% */
    }
    .landingReviewsWrapSwiper .swiper-slide{
      width: 250px;
      border-radius: 6.185px;
      background: #FFF;
      box-shadow: 0px 3.09244px 37.10925px 0px rgba(0, 0, 0, 0.10);
    }
    .landingReviewsWrapSwiperSliderBottom{
      border-radius: 0 0 6.185px 6.185px;
    }
    .landingReviewsWrapSwiperSliderBottomLeft{
      width: 41.748px;
      height: 41.748px;
    }
    .landingReviewsWrapSwiperSliderBottomLeft img{
      height: 100%;
      width: auto;
    }
    .landingReviewsWrapSwiperSliderBottomRightBtn{
      width: 41.748px;
      height: 41.748px;
    }
    .landingReviewsWrapSwiperSliderTopName{
      font-size: 12px;
      margin-top: 6px;
    }
    .landingReviewsWrapSwiperSliderTopVerif{
      font-size: 10px;
    }
    .landingReviewsWrapSwiperSliderTopVerif svg{
      width: 15px;
      height: 15px;
    }
    .landingReviewsWrapSwiperSliderTopWrapTop svg{
      height: 18px;
    }
    .landingReviewsWrapSwiperSliderBottomMiddle{
      font-size: 11px;
    }
    .landingReviewsWrapSwiper{
      padding: 40px 0!important;
    }
  }

  @media(max-width: 767px) {
    .nav_wrap {
      display: none;
    }

    .nwReviews {
      overflow: hidden;
    }

    .nwReviewsWrapTitle {
      justify-content: center;
    }
  }
</style>
